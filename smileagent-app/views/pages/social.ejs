<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Social Media - SmileAgent</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family+Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: '#0ea5e9',
          }
        }
      }
    }
  </script>
</head>
<body class="bg-gray-50 dark:bg-gray-800">
  <div class="flex min-h-screen">
    <%- include('../partials/sidebar', { currentPage, studioNome }) %>

    <main class="flex-1 p-8">
      <div class="max-w-7xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">üì± Social Media Manager</h1>

        <!-- Platform Tabs -->
        <div class="flex gap-2 mb-6">
          <button onclick="switchPlatform('instagram')" id="tabInstagram" class="platform-tab active px-6 py-3 rounded-lg font-semibold">
            üì∑ Instagram
          </button>
          <button onclick="switchPlatform('facebook')" id="tabFacebook" class="platform-tab px-6 py-3 rounded-lg font-semibold">
            üìò Facebook
          </button>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <!-- COLONNA 1: Form Generazione -->
          <div class="lg:col-span-2">
            <div class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-700 p-6">
              <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">
                <span class="material-symbols-outlined align-middle">auto_awesome</span>
                <span id="platformTitle">Genera Post Instagram con AI</span>
              </h2>

              <form id="generateForm" class="space-y-4">
                <!-- Topic -->
                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Tema del Post
                  </label>
                  <input
                    type="text"
                    id="topic"
                    name="topic"
                    required
                    placeholder="es: Sbiancamento denti, Igiene orale bambini, Ortodonzia invisibile..."
                    class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary dark:bg-gray-800 dark:text-white"
                  />
                </div>

                <!-- Style Selection -->
                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Stile Immagine
                  </label>
                  <div class="grid grid-cols-2 gap-3">
                    <label class="flex items-center p-3 border border-gray-300 dark:border-gray-600 rounded-lg cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-800">
                      <input type="radio" name="style" value="sorriso" checked class="mr-2"/>
                      <div>
                        <p class="font-medium text-gray-900 dark:text-white">üòÅ Sorriso</p>
                        <p class="text-xs text-gray-500">Foto bella smile</p>
                      </div>
                    </label>
                    <label class="flex items-center p-3 border border-gray-300 dark:border-gray-600 rounded-lg cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-800">
                      <input type="radio" name="style" value="educativo" class="mr-2"/>
                      <div>
                        <p class="font-medium text-gray-900 dark:text-white">üìö Educativo</p>
                        <p class="text-xs text-gray-500">Infografica tips</p>
                      </div>
                    </label>
                    <label class="flex items-center p-3 border border-gray-300 dark:border-gray-600 rounded-lg cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-800">
                      <input type="radio" name="style" value="motivazionale" class="mr-2"/>
                      <div>
                        <p class="font-medium text-gray-900 dark:text-white">üí™ Motivazionale</p>
                        <p class="text-xs text-gray-500">Quote ispirazionale</p>
                      </div>
                    </label>
                    <label class="flex items-center p-3 border border-gray-300 dark:border-gray-600 rounded-lg cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-800">
                      <input type="radio" name="style" value="prima_dopo" class="mr-2"/>
                      <div>
                        <p class="font-medium text-gray-900 dark:text-white">‚ú® Prima/Dopo</p>
                        <p class="text-xs text-gray-500">Trasformazione</p>
                      </div>
                    </label>
                  </div>
                </div>

                <!-- Platform Info -->
                <div id="platformInfo" class="bg-blue-50 dark:bg-blue-900/20 p-3 rounded-lg">
                  <p class="text-sm text-blue-800 dark:text-blue-300" id="platformInfoText">
                    <strong>Instagram:</strong> 5-7 hashtag, 150-200 parole, tono giovane, best time Marted√¨/Gioved√¨ 18-20
                  </p>
                </div>

                <button
                  type="submit"
                  id="generateBtn"
                  class="w-full bg-gradient-to-r from-primary to-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity"
                >
                  <span id="generateBtnText">üé® Genera Post con AI</span>
                </button>
              </form>

              <!-- Progress -->
              <div id="progressDiv" class="hidden mt-4 p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
                <div class="flex items-center">
                  <div class="animate-spin rounded-full h-5 w-5 border-b-2 border-primary mr-3"></div>
                  <span class="text-sm text-gray-700 dark:text-gray-300" id="progressText">Generazione in corso...</span>
                </div>
              </div>
            </div>

            <!-- Post Salvati -->
            <div class="mt-6 bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-700 p-6">
              <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">üìã Post Salvati</h3>
              <div id="savedPostsList">
                <% if (posts && posts.length > 0) { %>
                  <% posts.slice(0, 5).forEach(post => { %>
                    <div class="p-3 border border-gray-200 dark:border-gray-700 rounded-lg mb-3">
                      <div class="flex items-start justify-between">
                        <div class="flex-1">
                          <span class="inline-block px-2 py-1 text-xs rounded-full <%= post.stato === 'pubblicato' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-700' %>">
                            <%= post.stato %>
                          </span>
                          <p class="text-sm text-gray-700 dark:text-gray-300 mt-2"><%= post.contenuto.substring(0, 100) %>...</p>
                          <p class="text-xs text-gray-500 mt-1"><%= post.data_pubblicazione ? new Date(post.data_pubblicazione).toLocaleDateString('it-IT') : 'Bozza' %></p>
                        </div>
                        <button onclick="deletePost(<%= post.id %>)" class="text-red-600 hover:text-red-800 ml-2">
                          <span class="material-symbols-outlined text-sm">delete</span>
                        </button>
                      </div>
                    </div>
                  <% }) %>
                <% } else { %>
                  <p class="text-sm text-gray-500 text-center py-4">Nessun post salvato</p>
                <% } %>
              </div>
            </div>
          </div>

          <!-- COLONNA 2: Preview Post -->
          <div class="lg:col-span-1">
            <div class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-700 p-6 sticky top-8">
              <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">
                <span class="material-symbols-outlined align-middle">visibility</span>
                Preview Post
              </h3>

              <div id="previewContainer" class="hidden">
                <!-- Platform Preview Card -->
                <div class="border border-gray-300 dark:border-gray-600 rounded-lg overflow-hidden">
                  <!-- Header -->
                  <div class="p-3 flex items-center border-b border-gray-200 dark:border-gray-700">
                    <div id="previewPlatformAvatar" class="w-8 h-8 bg-gradient-to-br from-pink-500 to-purple-500 rounded-full mr-3"></div>
                    <div>
                      <p class="text-sm font-semibold text-gray-900 dark:text-white">Studio Dentistico Rossi</p>
                      <p class="text-xs text-gray-500">Post sponsorizzato</p>
                    </div>
                  </div>

                  <!-- Immagine -->
                  <div class="relative bg-gray-100 dark:bg-gray-800 aspect-square">
                    <img id="previewImage" src="" alt="Post preview" class="w-full h-full object-cover"/>
                  </div>

                  <!-- Content -->
                  <div class="p-3">
                    <div class="flex items-center gap-4 mb-3">
                      <span class="material-symbols-outlined text-gray-700 dark:text-gray-300">favorite_border</span>
                      <span class="material-symbols-outlined text-gray-700 dark:text-gray-300">mode_comment</span>
                      <span class="material-symbols-outlined text-gray-700 dark:text-gray-300">send</span>
                    </div>
                    <p class="text-sm text-gray-900 dark:text-white">
                      <span class="font-semibold">Studio Dentistico Rossi</span>
                      <span id="previewCaption"></span>
                    </p>
                    <p id="previewHashtags" class="text-sm text-primary mt-2"></p>

                    <!-- Stats -->
                    <div class="mt-3 p-2 bg-gray-50 dark:bg-gray-800 rounded text-xs">
                      <p class="text-gray-600 dark:text-gray-400">üìä <strong id="previewReach">300-1200</strong> account stimati</p>
                      <p class="text-gray-600 dark:text-gray-400">üïê Best time: <strong id="previewBestTime">Gioved√¨ 19:00</strong></p>
                    </div>
                  </div>
                </div>

                <!-- Bottone Salva -->
                <button
                  id="saveBtn"
                  onclick="savePost()"
                  class="w-full mt-4 bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors"
                >
                  üíæ Salva Bozza
                </button>

                <!-- Dati nascosti -->
                <input type="hidden" id="currentPostId" value=""/>
                <input type="hidden" id="currentImageUrl" value=""/>
                <input type="hidden" id="currentFullCaption" value=""/>
                <input type="hidden" id="currentPlatform" value="instagram"/>
              </div>

              <div id="previewPlaceholder" class="text-center py-8">
                <span class="material-symbols-outlined text-gray-400 text-5xl">photo_library</span>
                <p class="text-sm text-gray-500 mt-3">Genera un post per vedere la preview</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script>
    let currentPlatform = 'instagram';
    let currentPostData = null;

    // Switch Platform
    function switchPlatform(platform) {
      currentPlatform = platform;
      document.getElementById('currentPlatform').value = platform;

      // Update active tab
      document.querySelectorAll('.platform-tab').forEach(tab => {
        tab.classList.remove('active', 'bg-primary', 'text-white');
        tab.classList.add('bg-gray-200', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
      });

      const activeTab = platform === 'instagram' ? 'tabInstagram' : 'tabFacebook';
      const tabEl = document.getElementById(activeTab);
      tabEl.classList.add('active', 'bg-primary', 'text-white');
      tabEl.classList.remove('bg-gray-200', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');

      // Update title and info
      if (platform === 'instagram') {
        document.getElementById('platformTitle').textContent = 'Genera Post Instagram con AI';
        document.getElementById('platformInfoText').innerHTML = '<strong>Instagram:</strong> 5-7 hashtag, 150-200 parole, tono giovane, best time Marted√¨/Gioved√¨ 18-20';
        document.getElementById('previewPlatformAvatar').className = 'w-8 h-8 bg-gradient-to-br from-pink-500 to-purple-500 rounded-full mr-3';
      } else {
        document.getElementById('platformTitle').textContent = 'Genera Post Facebook con AI';
        document.getElementById('platformInfoText').innerHTML = '<strong>Facebook:</strong> MAX 2-3 hashtag, 100-150 parole, tono maturo, engagement domanda, best time Luned√¨/Mercoled√¨ 13-20';
        document.getElementById('previewPlatformAvatar').className = 'w-8 h-8 bg-blue-600 rounded-full mr-3';
      }
    }

    // Form submit - Genera post
    document.getElementById('generateForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(e.target);
      const data = {
        topic: formData.get('topic'),
        style: formData.get('style'),
        platform: currentPlatform
      };

      const progressDiv = document.getElementById('progressDiv');
      const generateBtn = document.getElementById('generateBtn');
      const progressText = document.getElementById('progressText');

      generateBtn.disabled = true;
      progressDiv.classList.remove('hidden');
      progressText.textContent = 'Generazione caption con Gemini...';

      try {
        const endpoint = currentPlatform === 'instagram' ? '/api/social/generate' : '/api/social/generate-facebook';

        const response = await fetch(endpoint, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (result.success) {
          progressText.textContent = 'Generazione immagine...';

          currentPostData = result;

          // Mostra preview
          document.getElementById('previewContainer').classList.remove('hidden');
          document.getElementById('previewPlaceholder').classList.add('hidden');
          document.getElementById('previewImage').src = result.imageUrl;
          document.getElementById('previewCaption').textContent = ' ' + result.caption;
          document.getElementById('previewHashtags').textContent = result.hashtags.join(' ');
          document.getElementById('previewReach').textContent = result.estimatedReach || '300-1200';
          document.getElementById('previewBestTime').textContent = result.bestTimeToPost || 'Gioved√¨ 19:00';

          // Salva dati nascosti
          document.getElementById('currentPostId').value = result.postId || '';
          document.getElementById('currentImageUrl').value = result.imageUrl;
          document.getElementById('currentFullCaption').value = result.fullCaption;

          progressText.textContent = '‚úÖ Post generato con successo!';
          setTimeout(() => {
            progressDiv.classList.add('hidden');
          }, 2000);
        } else {
          alert('‚ùå Errore: ' + result.error);
          progressDiv.classList.add('hidden');
        }
      } catch (error) {
        console.error(error);
        alert('‚ùå Errore durante la generazione');
        progressDiv.classList.add('hidden');
      } finally {
        generateBtn.disabled = false;
      }
    });

    // Salva post
    async function savePost() {
      const saveBtn = document.getElementById('saveBtn');
      saveBtn.disabled = true;
      saveBtn.textContent = '‚è≥ Salvataggio...';

      try {
        const response = await fetch('/api/social/save', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            platform: currentPlatform,
            imageUrl: document.getElementById('currentImageUrl').value,
            caption: document.getElementById('currentFullCaption').value,
            hashtags: document.getElementById('previewHashtags').textContent.split(' ').filter(h => h.startsWith('#'))
          })
        });

        const result = await response.json();

        if (result.success) {
          alert('‚úÖ Post salvato come bozza!');
          location.reload();
        } else {
          alert('‚ùå Errore salvataggio: ' + result.error);
        }
      } catch (error) {
        console.error(error);
        alert('‚ùå Errore durante il salvataggio');
      } finally {
        saveBtn.disabled = false;
        saveBtn.textContent = 'üíæ Salva Bozza';
      }
    }

    // Elimina post
    async function deletePost(id) {
      if (!confirm('Eliminare questo post?')) return;

      try {
        const response = await fetch(`/api/social/${id}`, { method: 'DELETE' });
        if (response.ok) {
          location.reload();
        } else {
          alert('Errore eliminazione');
        }
      } catch (error) {
        console.error(error);
        alert('Errore eliminazione');
      }
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
      switchPlatform('instagram');
    });
  </script>
</body>
</html>
