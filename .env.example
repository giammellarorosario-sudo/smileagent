# ========================================
# SmileAgent - Configurazione Ambiente
# ========================================

# Server
NODE_ENV=production
PORT=3000

# Database
DB_PATH=./data/smileagent.db

# Session Security
SESSION_SECRET=your-random-secret-here-change-in-production

# App Settings
APP_NAME=SmileAgent
APP_URL=https://your-domain.com

# ========================================
# API KEYS - OBBLIGATORIE
# ========================================

# Google Gemini API Key
# Ottieni la chiave: https://makersuite.google.com/app/apikey
# Free tier: 15 richieste/minuto, 1500 richieste/giorno
GEMINI_API_KEY=your_gemini_api_key_here

# ========================================
# VERTEX AI (Google Cloud) - OPZIONALE
# ========================================
# Solo per generazione immagini con Imagen 3
# Se non configurato, la funzione social/analisi immagini sar√† disabilitata

# Google Cloud Project ID
VERTEX_PROJECT_ID=your-project-id

# Regione server (consigliata: europe-west8 per Italia)
VERTEX_LOCATION=europe-west8

# Path credenziali (file vertex-credentials.json richiesto)
GOOGLE_APPLICATION_CREDENTIALS=./config/vertex-credentials.json

# ========================================
# RATE LIMITING (opzionale)
# ========================================
# Protezione free tier Gemini

# Limite richieste al minuto (default: 10, max free tier: 15)
RATE_LIMIT_PER_MINUTE=10

# Limite richieste al giorno (default: 1000, max free tier: 1500)
RATE_LIMIT_PER_DAY=1000

# ========================================
# AI CONFIGURATION (opzionale)
# ========================================

# Modello Gemini da usare
AI_MODEL=gemini-2.5-flash

# Token massimi per risposta
AI_MAX_TOKENS=2048

# Temperatura (0.0-1.0, default: 0.7)
AI_TEMPERATURE=0.7
