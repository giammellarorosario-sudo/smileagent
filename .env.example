# Configurazione SmileAgent

# Server
PORT=3000
NODE_ENV=development

# Database
DB_PATH=./data/smileagent.db

# Session
SESSION_SECRET=change-this-to-a-random-secret-in-production

# Anthropic API (Claude Haiku)
# Ottieni la tua chiave API da: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AI Settings
AI_MODEL=claude-3-5-haiku-20241022
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7

# App Settings
APP_NAME=SmileAgent
APP_URL=http://localhost:3000
